INCLUDES = -I${PREFIX}/include
LIBS = -L${PREFIX}/lib

AVX2_INFO := $(shell grep avx2 /proc/cpuinfo 1>/dev/null 2>&1; echo $$?)
AVX2 =1

ifeq ($(AVX2_INFO),1)
$(warning "CPU does not support AVX2...")
CFLAGS = -w -c -msse4.2 -mpopcnt -fomit-frame-pointer -Winline -O3 -lz -lhts
LDFLAGS = -lm -lz -lpthread -O3 -mpopcnt -msse4.2 -lz -w -lhts
else
$(warning "CPU can support AVX2...")
CFLAGS = -w -c -mavx2 -mpopcnt -fomit-frame-pointer -Winline -O3 -D __AVX2__ -lhts
LDFLAGS = -lm -lz -lpthread -O3 -mpopcnt -mavx2 -lz -w -D __AVX2__ -lhts
endif

SOURCES = saca-k.cpp bwt.cpp Bitmapper_main.cpp Process_CommandLines.cpp Auxiliary.cpp Index.cpp Schema.cpp Process_sam_out.cpp Process_Reads.cpp Ref_Genome.cpp Levenshtein_Cal.cpp SAM_queue.cpp bam_prase.cpp
OBJECTS = $(SOURCES:.c=.o)
EXECUTABLE = bitmapperBS

.PHONY: all

.ONESHELL:
all: $(SOURCES) $(EXECUTABLE) FORCE

$(EXECUTABLE): $(SOURCES) FORCE
	$(CXX) $(SOURCES) $(INCLUDES) -Ihtslib -I${PREFIX}/include/htslib -o $@ $(LIBS) $(LDFLAGS)

.c.o: FORCE
	$(CC) $(CFLAGS) $(INCLUDES) $< -o $@ 
clean:
	rm -f *.o *~ \#* bitmapper_BS

PHONY   +=FORCE
FORCE:

.PHONY: $(PHONY)
